const AchievementSystem = {
  categories: {
    focus: [
      { name: "First Focus", minutes: 25, xp: 100, badge: "ðŸŽ¯" },
      { name: "Hyperfocus Hero", minutes: 60, xp: 250, badge: "âš¡" },
      { name: "Deep Work Master", minutes: 120, xp: 500, badge: "ðŸ§ " },
      { name: "Marathon Coder", minutes: 240, xp: 1000, badge: "ðŸƒâ€â™‚ï¸" },
      { name: "BROskiâ™¾ Legend", minutes: 480, xp: 2000, badge: "ðŸ‘‘" }
    ],
    exploration: [
      { name: "Origins Explorer", nodes: ["origins"], xp: 150, badge: "ðŸ…" },
      { name: "Future Visionary", nodes: ["future"], xp: 200, badge: "ðŸ”®" },
      { name: "Constellation Master", nodes: "all", xp: 500, badge: "ðŸŒŸ" }
    ],
    community: [
      { name: "Helper", helpCount: 5, xp: 300, badge: "ðŸ¤" },
      { name: "Mentor", mentorSessions: 10, xp: 750, badge: "ðŸ‘¨â€ðŸ«" },
      { name: "Community Leader", contributions: 25, xp: 1500, badge: "ðŸ‘‘" }
    ]
  },

  checkAndUnlock(category, progress) {
    this.categories[category].forEach(achievement => {
      if (this.meetsRequirement(achievement, progress)) {
        this.unlockAchievement(achievement);
      }
    });
  },

  unlockAchievement(achievement) {
    // Add XP, show notification, update profile
    const userProfile = this.getUserProfile();
    userProfile.xp += achievement.xp;
    userProfile.achievements.push(achievement);
    
    this.showAchievementUnlock(achievement);
    this.saveUserProfile(userProfile);
  }
};
